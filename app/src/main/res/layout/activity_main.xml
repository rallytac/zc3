<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/etRemote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="Remote Address @ 43000" />

    <Switch
        android:id="@+id/swNet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:onClick="onClickNetworkingSwitch"
        android:text="Networking"
        />


    <Switch
        android:id="@+id/swAec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:onClick="onClickAecSwitch"
        android:text="AEC"
        />

    <Switch
        android:id="@+id/swAudio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:onClick="onClickAudioSwitch"
        android:text="Audio"
        />

    <Switch
        android:id="@+id/swMic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:onClick="onClickMicSwitch"
        android:text="Microphone"
        />
</LinearLayout>
